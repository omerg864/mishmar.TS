{
    "version": 2,
    "builds": [
      {
        "src": "./server/src/main.ts",
        "use": "@vercel/node"
      },
      {
        "src": "./client/build",    
        "use": "@vercel/static"
      }
    ],

    "buildCommand": "npm run build",
  
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/server/src/main.ts"
      }
    ]
  }