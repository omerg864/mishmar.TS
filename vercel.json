{
    "version": 2,
    "builds": [
      {
        "src": "./server/src/main.ts",
        "use": "@vercel/node"
      },
      {
        "src": "./client/build",    
        "use": "@vercel/static"
      }
    ],
  
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/server/src/main.ts"
      }
    ],
    "headers": [
      {
        "source": "./client/build",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "no-cache"
          }
        ]
      }
    ]
  }